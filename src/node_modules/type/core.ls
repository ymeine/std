_is = (type, arg) --> typeof! arg is type

isNumber   = _is 'Number'
isBoolean  = _is 'Boolean'
isString   = _is 'String'
isRegExp   = _is 'RegExp'
isDate     = _is 'Date'
isArray    = _is 'Array'
isObject   = _is 'Object'
isFunction = _is 'Function'


export {
	is: _is
	isNumber
	isBoolean
	isString
	isRegExp
	isDate
	isArray
	isObject
	isFunction
}

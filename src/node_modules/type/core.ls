# Below is the RegExp that could be used, however thsi is too expensive for such a static format
# /[object ([A-Z][a-z]*)]/

startOffset = 'object ['.length
endOffset = ']'.length
_typeof = (value) ->
	representation = Object::toString.call value
	representation.substring startOffset, representation.length - endOffset



# ------------------------------------------------------------------------------

_is = (type, value) --> _typeof(value) is type



# ------------------------------------------------------------------------------

export {
	typeof: _typeof

	is:         _is

	isNumber:   _is 'Number'
	isBoolean:  _is 'Boolean'
	isString:   _is 'String'
	isRegExp:   _is 'RegExp'
	isDate:     _is 'Date'
	isArray:    _is 'Array'
	isObject:   _is 'Object'
	isFunction: _is 'Function'
}
